{
  "name": "metamask-snap-subspace",
  "private": true,
  "author": {
    "name": "Subspace.network",
    "url": "https://subspace.network"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subspace/metamask-snap-subspace.git"
  },
  "bugs": {
    "url": "https://github.com/subspace/metamask-snap-subspace/issues"
  },
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:snap": "yarn workspace @subspace/subspace-snap build",
    "build:adapter": "yarn workspace @subspace/metamask-subspace-adapter build",
    "start:snap": "yarn workspace @subspace/subspace-snap serve",
    "start:example": "yarn workspace example start",
    "predemo": "yarn run build:snap && yarn run build:adapter",
    "build": "yarn workspaces foreach -vpt run build",
    "test": "yarn workspaces foreach -vpt run test",
    "lint": "yarn workspaces foreach -vpt run lint",
    "lint:style:fix": "yarn workspaces foreach -vp run lint:style:fix",
    "demo": "concurrently  --raw --kill-others \"yarn run start:snap\" \"yarn run start:example\""
  },
  "devDependencies": {
    "@chainsafe/eslint-config": "^2.1.1",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "typescript": "4.7.3"
  },
  "packageManager": "yarn@3.6.1",
  "dependencies": {
    "@rushstack/eslint-patch": "^1.3.3"
  }
}
