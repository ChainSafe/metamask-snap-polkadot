{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es5",
      "DOM",
      "ES2015"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  }
}