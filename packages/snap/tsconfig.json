{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "baseUrl": ".",
    "strictNullChecks": false,
    "noErrorTruncation": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@metamask/snaps-sdk",
    "paths": {
      "*": [
        "../../node_modules"
      ]
    },
    "outDir": "./build",
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "files": [
    "../../node_modules/@metamask/snaps-types/dist/types/global.d.ts"
  ]
}